# NearYou ID Server Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5433/nearyou_db
DATABASE_USER=nearyou_user
DATABASE_PASSWORD=nearyou_password

# Redis Configuration
REDIS_URL=redis://:nearyou_redis_password@localhost:6379

# JWT Configuration
# IMPORTANT: Change this in production!
JWT_SECRET=your-secret-key-change-in-production
JWT_ISSUER=nearyou-id
JWT_AUDIENCE=nearyou-api
JWT_REALM=nearyou

# OTP Configuration
# Options: mock, twilio, sendgrid
OTP_PROVIDER=mock

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0

